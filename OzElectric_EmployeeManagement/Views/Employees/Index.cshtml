@model IEnumerable<OzElectric_EmployeeManagement.Models.Employee>



@{
	ViewBag.Title = "Employees";

}
<hr />

<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<a href="@Url.Action("Create")" class="btn btn-success">Create New <span class="fa fa-plus fa-lg" aria-hidden="true"></span></a>
			@if (HttpContext.Current.User.IsInRole("Admin"))
            {
				<a href="@Url.Action("ExportToCSV")" class="btn btn-primary">Export CSV <span class="fa fa-download fa-lg" aria-hidden="true"></span></a>

						<a href="@Url.Action("ExportToExcel")" class="btn btn-primary">Export Excel <span class="fa fa-download fa-lg" aria-hidden="true"></span></a>



			}




			<script>
				function openWin() {
					window.open('EmployeeHourRecordQuery', 'test', 'width=400px, height=400px');
					//window.open();
				}
			</script>
			<body>
				<form>
					<input type="button" value="Open Window" onclick="openWin()">
				</form>
			</body>


		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title">Employees</h3>
				</div><!-- /.box-header -->
				<div class="box-body">
					<table id="example1" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>Employee Number</th>
								<th>First Name</th>
								<th>Last Name</th>
								<th>Address</th>
								<th>City</th>
								<th>Province/State</th>
								<th>Hours Worked</th>
								<th>Actions</th>

							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{

								<tr>

									<td>
										@Html.DisplayFor(modelItem => item.EmployeeNumber)
									</td>

									<td>
										@Html.DisplayFor(modelItem => item.FirstName)
									</td>

									<td>
										@Html.DisplayFor(modelItem => item.LastName)

									</td>

									<td>
										@Html.DisplayFor(modelItem => item.Address)
									</td>

									<td>
										@Html.DisplayFor(modelItem => item.City)
									</td>

									<td>
										@Html.DisplayFor(modelItem => item.ProvinceOrState)
									</td>
									<td>
										<!--a href="@Url.Action("getAllEmployeeHours", new { wantedUser = item.EmployeeID } )" class="btn btn-primary">Hours <span class="fa fa-download fa-lg" aria-hidden="true"></span></!--a--> <!--grabs all hours-->
										<a href="@Url.Action("EmployeeHourRecordQuery", new { wantedUserID = item.EmployeeID } ) " class="btn btn-primary">Hours <span class="fa fa-download fa-lg" aria-hidden="true"></span></a>

									</td>

									<td>
										@Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }, new { @class = "btn btn-warning" })

										@Html.ActionLink("Details", "Details", new { id = item.EmployeeID }, new { @class = "btn btn-primary" })
										<a href="@Url.Action("Delete", new { id = item.EmployeeID})" class="btn btn-danger"><span class="fa fa-trash-o fa-lg" aria-hidden="true"></span></a>
									</td>
								</tr>
							}
						</tbody>
						<tfoot>
							<tr>
								<th>Employee Number</th>
								<th>First Name</th>
								<th>Last Name</th>
								<th>Address</th>
								<th>City</th>
								<th>Province/State</th>
								<th>Hours Worked</th>
								<th>Actions</th>
							</tr>
						</tfoot>

					</table>
				</div><!-- /.box-body -->
			</div><!-- /.box -->
		</div><!-- /.col -->
	</div><!-- /.row -->
</section><!-- /.content -->
