@model IEnumerable<OzElectric_EmployeeManagement.Models.Employee>



@{
    ViewBag.Title = "Index";
    
}

<h2>Index</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
	@Html.ActionLink("Export CSV", "ExportToCSV")
</p>
<p>
	@Html.ActionLink("Export Excel", "ExportToExcel")
</p>

