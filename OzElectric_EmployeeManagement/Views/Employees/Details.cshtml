@model OzElectric_EmployeeManagement.Models.Employee


@{
    ViewBag.Title = "Employees";

}
<hr />

<section class="content">
    <div class="row">
        <div class="col-lg-4 col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="details" class="table table-bordered table-striped">

                        <tbody>

                                <tr>
                                    <th scope="row">Employee #:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.EmployeeNumber)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">First Name:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.FirstName)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Last Name:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.LastName)

                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Address:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.Address)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">City:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.City)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Province/State:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.ProvinceOrState)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Home Phone #:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.HomePhone)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Home Cell Phone #:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.HomeCellPhone)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Work Phone #:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.WorkPhone)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Work Cell Phone #:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.WorkCellPhone)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Emergency Contact Name:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.EmergencyContactName)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Emergency Contact Phone #:</th>
                                    <td>
                                        @Html.DisplayFor(model => model.EmergencyContactPhone)
                                    </td>
                                </tr>
                            
                        </tbody>

                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->