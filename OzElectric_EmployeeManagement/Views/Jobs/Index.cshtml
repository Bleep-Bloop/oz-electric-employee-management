@model IEnumerable<OzElectric_EmployeeManagement.Models.Job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<h2>Index</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
<table class="table table-bordered table-condensed table-striped">
    <tr>
        <th>
           Foreman
        </th>
        <th>
            Contractor
        </th>
        <th>
            Project Manager
        </th>
        <th>
            Purchaser
        </th>
        <th>
            Site Super
        </th>
        <th>
            Location
        </th>
        <th>
            Address
        </th>
        <th>
            City
        </th>
        <th>
            Province
        </th>
        <th>
            Contractor Contact
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Foreman.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GenContractor.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PM.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchaser.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteSuper.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Province)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GenContractorContact)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.JobID }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Details", "Details", new { id = item.JobID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.JobID }, new { @class = "btn btn-warning" })
        </td>
    </tr>
    }
</table>