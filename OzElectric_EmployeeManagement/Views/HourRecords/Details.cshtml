@model OzElectric_EmployeeManagement.Models.HourRecord

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Hour Record</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Employee
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.LastName)
        </dd>

        <dt>
            Job
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Job.JobName)
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateTime)
        </dd>

        <dt>
            Comment
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

        <dt>
            Hours
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hours)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.HourRecordID }, new { @class = "btn btn-warning" })
    <a href="@Url.Action("Index")" class="btn btn-primary">Back To List</a>
</p>
