            @Html.LabelFor(model => model.Job_JobID, "Job:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Job_JobID", null, htmlAttributes: new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.Job_JobID, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
                @Html.DropDownList("Employee_EmployeeID", null, htmlAttributes: new { @class = "hidden", @required = "required"  })
