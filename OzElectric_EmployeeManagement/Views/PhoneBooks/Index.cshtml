@model IEnumerable<OzElectric_EmployeeManagement.Models.PhoneBook>

@{
    ViewBag.Title = "Phone Book";
}

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New <span class="fa fa-plus fa-lg" aria-hidden="true"></span></a>
</p>

@if (HttpContext.Current.User.IsInRole("Admin"))
{

    <p>
        <a href="@Url.Action("ExportToCSV")" class="btn btn-primary">Export CSV <span class="fa fa-download fa-lg" aria-hidden="true"></span></a>
    </p>
    <p>
        <a href="@Url.Action("ExportToExcel")" class="btn btn-primary">Export Excel <span class="fa fa-download fa-lg" aria-hidden="true"></span></a>
    </p>

}

<p>
    @Html.ActionLink("Debug Test", "testingButtonAgain")
</p>

<section class="content-header">
    <h1>
        Data Table
        <small>PhoneBook</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">PhoneBook</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Contact Name
                                </th>
                                <th>
                                    Work Phone
                                </th>
                                <th>
                                    Work Cell
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WorkPhone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WorkCellPhone)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ContactId }, new { @class = "btn btn-warning" })
                                        @Html.ActionLink("Details", "Details", new { id = item.ContactId }, new { @class = "btn btn-primary" })
                                        <a href="@Url.Action("Delete", new { id = item.ContactId})" class="btn btn-danger"><span class="fa fa-trash-o fa-lg" aria-hidden="true"></span></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    Contact Name
                                </th>
                                <th>
                                    Work Phone
                                </th>
                                <th>
                                    Work Cell
                                </th>
                            </tr>
                        </tfoot>

                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
